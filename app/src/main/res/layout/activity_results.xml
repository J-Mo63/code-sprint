<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sudo_code.codesprint.activity.ResultsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/results_title"
        android:textStyle="bold"
        android:textSize="30sp" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="25sp"
                android:gravity="end"
                android:text="Question 1:" />

            <TextView
                android:id="@+id/results_time_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="25sp"
                android:text="34.33s" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="25sp"
                android:gravity="end"
                android:text="Question 2:" />

            <TextView
                android:id="@+id/results_time_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="25sp"
                android:text="34.33s" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="25sp"
                android:gravity="end"
                android:text="Question 3:" />

            <TextView
                android:id="@+id/results_time_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="25sp"
                android:text="34.33s" />

        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:text="@string/total_time_title"
        android:textStyle="bold"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/results_time_total"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="34.33s" />

    <TextView
        android:id="@+id/results_grade"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:text="B" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/results_done_button"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:textSize="20sp"
            android:text="Done" />

    </LinearLayout>

</LinearLayout>
