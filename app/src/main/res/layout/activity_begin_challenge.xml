<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sudo_code.codesprint.activity.BeginChallengeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/are_you_ready_to_begin_title"
        android:textStyle="bold"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:text="@string/challenge_instructions_text" />

    <Button
        android:id="@+id/begin_challenge_begin_button"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:textSize="20sp"
        android:text="@string/begin_button_text"
        android:enabled="false" />
</LinearLayout>
